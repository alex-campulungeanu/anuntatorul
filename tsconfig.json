{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", ".env"],
  "exclude": ["node_modules", "./node_modules"]
}